{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "packages/@nilswg/i18n-next/i18n.js", "packages/@nilswg/i18n-next/i18n.config.ts", "packages/@nilswg/i18n-next/i18n.ts", "packages/@nilswg/i18n-next/LocaleProvider.tsx", "packages/@nilswg/i18n-next/index.mjs"],
  "exclude": ["node_modules"]
}
