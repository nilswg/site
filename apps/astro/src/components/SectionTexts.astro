---
import { SectionText, SectionTitle } from '@nilswg-site/ui';
import { t } from 'i18next';
import Trans from './Trans.astro';

type Props = {
    i18nKeys: {
        title: string;
        texts: string;
    };
};

const { i18nKeys } = Astro.props as Props;

const lang = t('common:lang');
const titleStyle = lang === 'zh-TW' ? 'font-notosans_bold mb-3' : 'font-russon font-normal';
const textStyle = lang === 'zh-TW' ? 'font-zhtw' : 'font-outfit';
---

<SectionTitle className={titleStyle} text={t(i18nKeys.title)} client:load />
<SectionText className={textStyle}>
    <p>
        <Trans i18nKey={i18nKeys.texts} isArray>
            I'm a <b class="font-bold text-white">2.5 years</b> ...
        </Trans>
    </p>
</SectionText>
