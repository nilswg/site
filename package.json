{
  "name": "pnpm-workspace",
  "scripts": {
    "astro:dev": "pnpm run --filter astro dev",
    "astro:build": "pnpm run --filter astro build",
    "next:dev": "pnpm run --filter next dev",
    "next:build": "pnpm run --filter next build",
    "resume": "pnpm run --filter pdf-maker resume",
    "format:check": "prettier --check ./{apps/astro/src,apps/next/app,packages}/**/*.{astro,ts,tsx} --ignore-path .prettierignore",
    "format:write": "prettier --write ./{apps/astro/src,apps/next/app,packages}/**/*.{astro,ts,tsx} --ignore-path .prettierignore --log-level error"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.63",
    "@types/react-dom": "^18.2.19",
    "@types/jest": "^29",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "0.13.0",
    "prettier-plugin-tailwindcss": "0.5.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.3"
  }
}
